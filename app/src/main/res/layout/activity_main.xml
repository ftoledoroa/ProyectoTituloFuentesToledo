<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="176dp"
        android:layout_height="201dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/estacionamientologo" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivLogo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="210dp"
        android:text="Iniciar Sesión"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"
        android:layout_alignStart="@+id/tvTitulo"
        android:layout_marginStart="-31dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCorreo"
        android:layout_alignStart="@+id/etCorreo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="31dp"
        android:ems="11"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="40dp"
        android:text="Iniciar Sesión" />

    <Button
        android:id="@+id/btCrearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btIniciarSesion"
        android:layout_alignEnd="@+id/btIniciarSesion"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="-27dp"
        android:text="Crear nueva cuenta" />

    <TextView
        android:id="@+id/tvOlvidopassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginStart="44dp"
        android:layout_marginTop="184dp"
        android:text="¿Olvidó su contraseña?" />


</RelativeLayout>
        android:layout_above="@+id/tvEscanear"
        android:layout_alignEnd="@+id/tvTitulo"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/iconoqr" />

    <ImageView
        android:id="@+id/imageView5"
